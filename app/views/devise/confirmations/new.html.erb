<div class="vh-100 d-flex justify-content-center align-items-start">
  <div class="w-25 mt-5"> <!-- Cambio de w-50 a w-25 para hacer la barra m치s angosta -->
    <div class="text-center mb-4">
      <%= image_tag "socials-logo-noback.PNG", alt: "Logo de la App", class: "img-fluid", style: "width: 200px;" %>
    </div>
    <h2 class="text-center">Resend confirmation instructions</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "mt-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mb-4"> <!-- A침adir mb-4 para dar espacio adicional antes del bot칩n -->
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
      </div>

      <div class="actions mb-3"> <!-- A침adir mb-3 para dar espacio adicional antes de los links -->
        <%= f.submit "Resend confirmation instructions", class: "btn btn-primary w-100" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
